<div class="row row-cols-6 mt-5">
    {{#each locations}}
    <div class="col">
        <div class="card">
            <div class="card-body">
                <h4>{{name}}</h4>
                <a href="/locations/edit/{{id}}" class="btn btn-success">Editar</a>
                <form action="/locations/delete/{{id}}" method="POST" class="mt-1">
                    <button type="submit" class="btn btn-success">Eliminar</button>
                </form>
            </div>
        </div>
    </div>
    {{/each}}
</div>


